@page "/viagem"

<div class="text-center">
    <h3>Desafio Capitulo 8</h3>
</div>

<div class="card">
    <div class="card-body">
        <label>Distância a percorrer em quilômetros</label>
        <input @bind="distancia" class="form-control" />
        <br />
        <label>Velocidade média (km/hora)</label>
        <input @bind="velocidadeMedia" class="form-control" />
        <br />
        <label>Tempo estimado em horas</label>
        <input value="@tempoEstimado" class="form-control" />
        <br />
        <br />
    </div>
    <div class="card-header text-center" >
        <div class="card-body">
            <button @onclick="estimaHorasViagem" class="btn btn-outline-primary">Calcular Tempo</button>
        </div>
     </div>
</div>

    @code {
        int distancia;
        double velocidadeMedia;
        double tempoEstimado;

        void estimaHorasViagem() {
            tempoEstimado = distancia / velocidadeMedia;
        }
    }
