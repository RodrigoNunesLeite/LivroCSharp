@page "/numerosPrimos";

<h3>NumerosPrimos</h3>

<div class="form-group">
    <label>Numeros Primos</label>
</div>


<div class="form-group">
    <button @onclick="calculaNumerosPrimos" class="btn btn-outline-danger">
        Ver Numeros
    </button>
</div>

@code {
    string numerosPrimos;

    void calculaNumerosPrimos() {
        for (int i = 1; i <= 50; i++) {

            if ( i > 3 && (i % 2 != 0 && i % 3 != 0) || 
                 i == 3 || i == 2) {
                numerosPrimos = numerosPrimos + "," + Convert.ToString(i);
            }
        }
    }
}
